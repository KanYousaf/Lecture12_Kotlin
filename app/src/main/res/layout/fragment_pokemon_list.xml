                        android:src="@drawable/weedle"
                        android:tag="Weedle"
                        android:layout_weight="1"
                        android:scaleType="fitCenter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </TableRow>

            <TableRow
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <ImageButton
                        android:src="@drawable/clefairy"
                        android:tag="Clefairy"
                        android:layout_weight="1"
                        android:scaleType="fitCenter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
